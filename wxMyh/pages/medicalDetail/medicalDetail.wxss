@import "../../utils/wxParse/wxParse.wxss";

.banners {
  width: 100%;
}

.banner {
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
}
.body{
  margin: 5px;padding:0 0 100rpx;
}

.medicalName{
  color: #333;
  text-align: center;
  margin: 10px 0 0 0;
}

.mui-bar {
  position: fixed;
  z-index: 10;
  right: 0;
  left: 0;
  bottom: 0;
  height: 100rpx;
  border-bottom: 0;
  background-color: #ffffff;
  -webkit-box-shadow: 0 0 1px #ccc;
  box-shadow: 0 0 1px #ccc;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  text-align: center;
}

.tel{
  width: 30%;
  background-color: #33A2D7;
  color: #fff;
  font-size: 25rpx;
  margin: 0 80rpx 0 0;
  display: inline-block;
  border-radius: 30rpx;
  top:8px;
}

.online{
  width:30%;
  background-color: #fff;
  color: #33A2D7;
  font-size: 25rpx;
  border: 1px solid #dedede;
  display: inline-block;
  border-radius: 30rpx;
  top:8px;
}

button::after {
  border: 0;
}

.mui-bar-tel {
  position: fixed;
  z-index: 10;
  right: 0;
  left: 85%;
  bottom: 5%;
  border-bottom: 0;
background-color: rgba(11, 185, 255, 0.7);
  -webkit-box-shadow: 0;
  box-shadow: 0;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  text-align: center;
  width: 45px;
  border-radius: 45px
}

.mui-bar-tel image {
  width: 30px;
  height: 30px;
  margin: 6px 0;
  position:relative;
top:2px;
}
