
.scroll-left, .scroll-right {
  height: 100%;
}

page {
  background: #f5f5f5;
}

.container2 {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;margin-top:90rpx;
}

.nav_left {
  width: 25%;
  height: 100%;
  background: #f5f5f5;
  position: relative;
  min-height: 1px;
  overflow-y: auto;
  float: left;
  text-align: center;
}

.nav_left .nav_left_items {
  min-height: 30px;
  line-height: 30px;
  padding: 6px 0;
  border-bottom: 1px solid #dedede;
  font-size: 30rpx;
}

.nav_left .nav_left_items.active {
  background: #fff;
}

.nav_right {
  position: absolute;
  right: 0;
  flex: 1;
  width: 75%;
  height: 100%;
  padding: 10px;
  background: #fff;
  box-sizing: border-box;
  float: right;
}

.nav_right .nav_right_items {
  float: left;
  width: 50%;
  text-align: center;
  margin: 10px 0;
}

.nav_right .nav_right_items image {
width:238rpx;
height:240rpx;
}

.nav_right .nav_right_items text {
  display: block;
  margin-top: 5px;
  font-size: 25rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #333;
}
