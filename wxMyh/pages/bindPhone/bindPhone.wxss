.form-list {
  position: relative;
  margin-bottom: 20rpx;
}

.form-list:first-child {
  padding-top: 60rpx;
}

.form-list::before, .form-list::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  height: 1px;
  width: 100%;
  transform: scaleY(0.5);
  background-color: #e3e3e3;
}

.form-list::before {
  top: 0;
}

.form-list::after {
  bottom: 0;
}

.form-item {
  position: relative;
  box-sizing: border-box;
  display: flex;
  width: 100%;
  padding: 15rpx 40rpx;
}

.form-item::before {
  content: '';
  display: block;
  position: absolute;
  z-index: 99;
  left: 0;
  top: 0;
  height: 1px;
  width: 100%;
  transform: scaleY(0.5);
  background-color: #e3e3e3;
}

.form-item:first-child::before {
  display: none;
}

.form-item-hd {
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.form-item-bd {
  flex: 1;
  height: 60rpx;
}

input, .input {
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  padding: 0 15rpx;
}

.input-placeholder {
  color: #808080;
}

.edit-btn {
  width: 95%;
  height: 80rpx;
  margin: 58rpx auto 0;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #0bb9f6;
  color: #fff;
}

.hidden {
  display: none;
}

.code_btn {
  width: 30%;
  float: right;
  bottom: 88rpx;
  right: 0;
  font-size: 30rpx;
  border: 0;
  line-height: 2.99;
  color: #333;
  border-radius: 0;
}

button::after {
  border: 0;
  border-radius: 0;
}

.icon {
  width: 39rpx;
  height: 57rpx;
  float: left;
  position: relative;
  top: 1rpx;
}

.input {
  width: 93%;
  float: right;
  position: relative;
}

button {
  background-color: #eee;
}

button[disabled][type="default"], wx-button[disabled]:not([type]) {
  color: rgba(0, 0, 0, 0.3);
  background-color: #eee;
}
