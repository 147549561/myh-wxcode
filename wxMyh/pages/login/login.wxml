<form bindsubmit="toLogin">
    <view class="form-list">
        <view class="form-item">
            <view class="form-item-bd">
            <image class="icon" src="../../image/icon_phone.png"></image>
                <input class="input" type="number" name="account" value="" bindinput="telInput" placeholder="请输入手机号" maxlength="11"/>
            </view>
        </view>
         <view class="form-item">
            <view class="form-item-bd">
            <image class="icon" src="../../image/icon_pwd.png" style="width:42rpx;height:53rpx;"></image>
                <input type="text" password="true" class="input" name="password" value="" bindinput="pwdInput" placeholder="请输入密码"/>
            </view>
        </view>
    </view>
    <button formType="submit" class="edit-btn" disabled="{{disabled}}">登录</button>
</form>