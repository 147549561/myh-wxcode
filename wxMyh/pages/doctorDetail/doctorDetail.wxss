.user-info {
  box-sizing: border-box;
  width: 750rpx;
  height: 400rpx;
  padding: 20rpx 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  background-color: #0bb9f6;
  background-position: center;
  color: #666;
}

page {
  height: auto;
}

.user-nickname {
  color: #fff;
  font-size: 30rpx;
}

.cls {
  font-size: 24rpx;
}

.user-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 180rpx;
}

.til {
  color: #0bb9f6;
  font-size: 33rpx;
  margin: 0 0 10rpx;
}

.summary-text, .goodAt-text {
  white-space: pre-wrap;
  word-break: break-all;
  color: #666;
  margin: 10rpx 0 20rpx;
  line-height:38rpx;
}

.main {
  width: 100%;
}

.summary, .goodAt {
  margin: 0 10px;
  padding: 10px 0 0;
}

.bg-line {
  height: 16rpx;
  background-color: #efeff4;
  width: 100%;
}

.lable-line {
  padding-left: 10rpx;
  margin: 0 0 20rpx;
  font-size: 30rpx;
  border-left: 5rpx solid #0bb9f6;
  line-height: 34rpx;
}

.wa-item-thumbnail-left .item-img {
  border-radius: 70px;
  height: 70px;
  width: 70px;
  top: 13px;
}

.doctor-name {
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.doc-level {
  font-size: 12px;
  color: #999;
  margin: 0 0 0 10px;
  float: right;
}

.hospitalName {
  color: #666;
  margin: 6px 0 0 0;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal !important;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.doctor-icon {
  width: 15px;
  height: 16px;
  position: relative;
  top: 2px;
}

.loading-tip {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ccc;
}

.big-logo {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  margin: 5px 0;
  padding: 10px 0 3px;
  background-color: #fff;
}

.big-logo image {
  width: 60rpx;
  height: 60rpx;
}

.logoinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 240rpx;
  height: 115rpx;
  border-right: 1px solid #dedede;
  padding-top:15rpx;
}

.logotext {
  color: #333;
  font-size: 24rpx;
  margin: 5px 0;
}
